<h1>Pirate</h1>

<div class="pirate">
  <h3>Name: <%=@pirate.name%></h3><br>
  <h3>Weight: <%=@pirate.weight%></h3><br>
  <h3>Height: <%=@pirate.height%></h3><br>
</div>

<h1>Ships</h1>
<%@ships.each.with_index do |ship, index|%>
<div class="ship">
  <h4>Ship <%=index+1%></h4>
  <p>Name: <%=ship.name%></p><br>
  <p>Type: <%=ship.type%></p><br>
  <p>Booty: <%=ship.booty%></p><br>
</div>
<%end%>
